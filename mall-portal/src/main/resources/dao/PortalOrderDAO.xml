<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.papa.portal.dao.PortalOrderDAO">
    <update id="releaseSkuStockLock">
        update `pms_sku_stock`
        set `lock_stock` =
            case `id`
        <foreach collection="list" item="it" separator="," index="index">
            when #{it.productSkuId} then `lock_stock` - #{it.productQuantity}
        </foreach>
        end
        where id in
        <foreach collection="list" open="(" close=")" separator="," item="it" index="index">
            #{it.productSkuId}
        </foreach>
    </update>
</mapper>